<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="watchers" type="FileSystemWatcherService.WatchersConfig, FileSystemWatcherService"/>
	</configSections>

	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.2" />
	</startup>

	<watchers>
		<watcher path="C\Windows:\Temp" notifyFilter="LastWriteAccess" changed="true">
			$event | ConvertTo-Json >> Out.txt
		</watcher>
		<watcher path="C\Windows:\Temp" filter="*.dns" notifyFilter="FileName" created="true">
			$event | ConvertTo-Json >> Out.txt
		</watcher>
		<watcher path="C\Windows:\Temp" notifyFilter="DirectoryName" created="true">
			$event | ConvertTo-Json >> Out.txt
		</watcher>
		<watcher path="C\Windows:\Temp" notifyFilter="DirectoryName" deleted="true">
			$event | ConvertTo-Json >> Out.txt
		</watcher>
	</watchers>
</configuration>